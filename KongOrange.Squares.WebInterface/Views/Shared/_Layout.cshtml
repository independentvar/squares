<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/style")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div id="wrapper">
        <header>
            <a href="@Url.Action("Index", "Home")"><img src="@Url.Content("~/Content/Images/logo.png")" id="logo" alt="Squares logo" title="Home"></a>
            <nav>
                <button class="mobile"><img src="@Url.Content("~/Content/Images/menu/openMenu.png")" alt="open menu"></button>
                <ul id="mainMenu">
                    <li id="closeMenu" class="mobile"><span>Close menu</span><img class="mobile" src="@Url.Content("~/Content/Images/menu/closeMenu.png")" alt="close menu" /></li>
                    <li id="homeMenu"><a href="@Url.Action("Index", "Home")"><img class="mobile" src="@Url.Content("~/Content/Images/menu/createIcon.png")" alt="Home" /><span>Create</span></a></li>
                    <li id="browseMenu"><a href="@Url.Action("Index", "Browse")"><span>Browse</span><img class="mobile" src="@Url.Content("~/Content/Images/menu/browseIcon.png")" alt="Home" /></a></li>
                    <li id="aboutMenu"><a href="@Url.Action("About", "Home")"><img class="mobile" src="@Url.Content("~/Content/Images/menu/aboutIcon.png")" alt="Home" /><span>About</span></a></li>
                    <li id="loginMenu"><a href="#log_in"><span>Log in</span><img class="mobile" src="@Url.Content("~/Content/Images/menu/loginIcon.png")" alt="Home" /></a></li>
                    <li id="mysetsMenu"><a href="@Url.Action("Index", "SquareSets")"><span>My Sets</span><img class="mobile" src="@Url.Content("~/Content/Images/menu/loginIcon.png")" alt="Home" /></a></li>
                    <li id="profileMenu"><a href="profile.html"><img class="mobile" src="@Url.Content("~/Content/Images/menu/aboutIcon.png")" alt="Home"/><span>Kamilla</span></a>
                        <ul class="desktop">
                            <li><a href="profile.html"><img src="@Url.Content("~/Content/Images/menu/settingsIcon.png")" alt="profile" /><span>Settings</span></a></li>
                            <li><a href=""><span>Log out</span><img src="@Url.Content("~/Content/Images/menu/logoutIcon.png")" alt="profile" /></a></li>
                        </ul>
                    </li>
                </ul>
            </nav>
        </header>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Create", "Index", "Home")</li>
                    <li>@Html.ActionLink("Browse", "Contact", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("My Square sets", "Index", "SquareSets")</li>
                    <li>@Html.ActionLink("Admin", "Index", "Users", new { area = "Admin" }, null)</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <a href=""><img class="socialButtons" src="@Url.Content("~/Content/Images/social/mail.png")" alt="mail"></a>
            <a href=""><img class="socialButtons" src="@Url.Content("~/Content/Images/social/facebook.png")" alt="facebook"></a>
            <a href=""><img class="socialButtons" src="@Url.Content("~/Content/Images/social/twitter.png")" alt="twitter"></a>
            <a href=""><img class="socialButtons" src="@Url.Content("~/Content/Images/social/instagram.png")" alt="instagram"></a>
            <a href=""><img class="socialButtons" src="@Url.Content("~/Content/Images/social/spotify.png")" alt="spotify"></a>
            <a href=""><img class="socialButtons" src="@Url.Content("~/Content/Images/social/youtube.png")" alt="youtube"></a>
        </footer>
    </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/site")

    @RenderSection("scripts", required: false)
</body>
</html>
