<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" initial-scale="1.0" maximum-scale="1.0" user-scalable="0" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/style")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div id="wrapper">
        <header>
            <a href="@Url.Action("Index", "Home", new {area = ""})"><img src="@Url.Content("~/Content/Images/logo.png")" id="logo" alt="Squares logo" title="Home"></a>
            <nav>
                <button class="mobile"><img src="@Url.Content("~/Content/Images/menu/openMenu.png")" alt="open menu"></button>
                <ul id="mainMenu">
                    <li id="closeMenu" class="mobile"><span>Close menu</span><img class="mobile" src="/Content/Images/menu/closeMenu.png" alt="close menu"/></li>
                    <li id="homeMenu"><a href="@Url.Action("Index", "Home")"><img class="mobile" src="/Content/Images/menu/createIcon.png" alt="Home"/><span>Create</span></a></li>
                    <li id="browseMenu"><a href="@Url.Action("Index", "Browse")"><span>Browse</span><img class="mobile" src="/Content/Images/menu/browseIcon.png" alt="Home"/></a></li>
                    <li id="aboutMenu"><a href="@Url.Action("About", "Home")"><img class="mobile" src="/Content/Images/menu/aboutIcon.png" alt="Home"/><span>About</span></a></li>
                    @Html.Partial("_LoginPartial")
                </ul>
            </nav>
        </header>

        @RenderBody()
            
        <footer>
            <a href=""><img class="socialButtons" src="/Content/Images/social/mail.png" alt="mail"></a>
            <a href=""><img class="socialButtons" src="/Content/Images/social/facebook.png" alt="facebook"></a>
            <a href=""><img class="socialButtons" src="/Content/Images/social/twitter.png" alt="twitter"></a>
            <a href=""><img class="socialButtons" src="/Content/Images/social/instagram.png" alt="instagram"></a>
            <a href=""><img class="socialButtons" src="/Content/Images/social/spotify.png" alt="spotify"></a>
            <a href=""><img class="socialButtons" src="/Content/Images/social/youtube.png" alt="youtube"></a>
        </footer>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/site")

    @RenderSection("scripts", required: false)
</body>
</html>
