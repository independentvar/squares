@model KongOrange.Squares.DomainClasses.SquareSetPiece

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>SquareSetPiece</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>

        <dd>
            <img src="@Html.DisplayFor(model => model.ImageUrl)" alt="piece" width="300" height="300"/>
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @{
                int squareSetId = ViewBag.SquareSetId;
                @Html.Hidden("squareSetId", squareSetId);
            }

            <input type="submit" value="Delete" class="btn btn-default"/> |
            
            @Html.ActionLink("Back to List", (string)ViewBag.Action, (string)ViewBag.Controller, new { id = (int)ViewBag.RouteId }, null)
        </div>
    }
</div>
